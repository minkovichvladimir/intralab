@{
    ViewBag.Title = "Intra Lab";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/images/banner/01.png" alt="LAN" class="img-responsive">
        </div>
        <div class="item">
            <img src="~/Content/images/banner/02.png" alt="keyboard" class="img-responsive">
        </div>
        <div class="item">
            <img src="~/Content/images/banner/03.png" alt="server" class="img-responsive">
        </div>
        <div class="item">
            <img src="~/Content/images/banner/04.png" alt="board" class="img-responsive">
        </div>
    </div>
    <!--Controls-->
    @*<a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>*@
</div>

<div class="jumbotron">
    @*<h1>intra lab</h1>*@
    <img src="~/Content/images/logo.png" width="300" title="Wireless" alt="Wireless" class="img-responsive"
         style="margin-top:15px" />
    <p class="lead">
        <br />
        Мы - молодая, развивающаяся компания на рынке IT услуг
        и разработки программного обеспечения
    </p>
    <p><a href=@Url.Action("Services","Home") class="btn btn-primary btn-lg">Наши услуги &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-3" style="text-align:center; background-color:#ef7f1a; height:200px; padding-top:40px">
        <h3 style="color:#eeeeee">Организация ЛВС</h3>
        <p style="margin-top:50px"><a class="btn btn-default" href=@Url.Action("LAN", "Services")>Подробнее &raquo;</a></p>
    </div>
    <div class="col-md-3" style="text-align:center; background-color:#068744; height:200px; padding-top:40px">
        <h3 style="color:#eeeeee">IP Телефония</h3>
        <p style="margin-top:50px"><a class="btn btn-default" href=@Url.Action("IPtelephony", "Services")>Подробнее &raquo;</a></p>
    </div>
    <div class="col-md-3" style="text-align:center; background-color:#428bca; height:200px; padding-top:40px">
        <h3 style="color:#eeeeee">Видеонаблюдение</h3>
        <p style="margin-top:50px"><a class="btn btn-default" href=@Url.Action("Videosurveillance", "Services")>Подробнее &raquo;</a></p>
    </div>
    <div class="col-md-3" style="text-align:center; background-color:#b45900; height:200px; padding-top:40px">
        <h3 style="color:#eeeeee">Поддержка</h3>
        <p style="margin-top:50px"><a class="btn btn-default" href=@Url.Action("Support", "Services")>Подробнее &raquo;</a></p>
    </div>
</div>