<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – IT Решения</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-header pull-left">
                    <a class="navbar-brand" href=@Url.Action("Index", "Home") style="padding:10px;"><img src="~/Content/images/logo 2.png" width="45" title="intra lab" alt="intra lab" /></a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Наши услуги <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Беспроводные сети", "Wireless", "Services")</li>
                            <li>@Html.ActionLink("Подбор оборудования", "Equipment", "Services")</li>
                            <li>@Html.ActionLink("Организация ЛВС", "LAN", "Services")</li>
                            <li>@Html.ActionLink("IP-телефония", "IPtelephony", "Services")</li>
                            <li>@Html.ActionLink("Мониторинг деятельности пользователей", "UserMonitoring", "Services")</li>
                            <li>@Html.ActionLink("Видеоконференцсвязь", "Videoconferencing", "Services")</li>
                            <li>@Html.ActionLink("Системы видеонаблюдения", "Videosurveillance", "Services")</li>
                            <li>@Html.ActionLink("Разработка WEB-сайтов", "Develop", "Services")</li>
                            <li>@Html.ActionLink("Поддержка", "Support", "Services")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                </ul>
                <p class="navbar-text navbar-right">
                    <a href=@Url.Action("Contact", "Home") class="navbar-link">Республика Крым, г.Симферополь</a>
                </p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-6" style="text-align:left">
                    <p>&copy; @DateTime.Now.Year – intra lab</p>
                </div>
                <div class="col-md-6" style="text-align:right">
                    <p style="white-space:nowrap">*Мы устанавливаем только Лицензионное ПО</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
